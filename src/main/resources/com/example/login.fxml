<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="loginAnchorPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: white; -fx-background-radius: 32px; -fx-border-radius: 32px;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.LoginController">
    <children>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="177.0" layoutY="14.0" prefHeight="122.0" prefWidth="247.0" text="Login">
            <font>
                <Font name="Copperplate" size="48.0" />
            </font>
        </Label>
      <PasswordField fx:id="password" layoutX="198.0" layoutY="221.0" onKeyTyped="#password" prefHeight="41.0" prefWidth="205.0" promptText="Write your password">
         <font>
            <Font name="Copperplate" size="16.0" />
         </font></PasswordField>
      <TextField fx:id="username" layoutX="198.0" layoutY="159.0" onKeyTyped="#username" prefHeight="41.0" prefWidth="205.0" promptText="Write your username">
         <font>
            <Font name="Copperplate" size="16.0" />
         </font></TextField>
        <Button fx:id="backToMainButton" alignment="CENTER" layoutX="202.0" layoutY="354.0" mnemonicParsing="false" onAction="#backToMain" prefHeight="18.0" prefWidth="196.0" style="-fx-background-color: blue;" text="Go back to main" textFill="WHITE">
            <font>
                <Font name="Copperplate" size="14.0" />
            </font>
        </Button>
      <Button fx:id="login" alignment="CENTER" layoutX="198.0" layoutY="270.0" mnemonicParsing="false" prefHeight="41.0" prefWidth="205.0" style="-fx-background-color: blue;" text="Login" textFill="WHITE">
         <font>
            <Font name="Copperplate" size="14.0" />
         </font>
      </Button>
    </children>
</AnchorPane>
